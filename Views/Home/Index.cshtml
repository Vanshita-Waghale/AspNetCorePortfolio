@{
    ViewData["Title"] = "Home";
}

<div class="home-container d-flex align-items-center justify-content-center">
    <!-- Left Section -->
    <div class="left-section">
        <h1 class="intro-title">Hello, I'm <span class="highlight">Vanshita Waghale 🚀</span></h1>

        <!-- Typing animation -->
        <div class="typing-container mt-3">
            <span id="typed-text"></span><span class="cursor">|</span>
        </div>

        <!-- Motivational quote -->
        <p class="motivational-quote mt-4">
            Turning Imagination into Innovation with a Creative Twist—Crafting Digital Masterpieces One Line of Code at a Time
        </p>

        <!-- Learn More Button -->
        <a class="btn btn-warning mt-4" href="/Home/About">Learn more about me</a>

        <!-- ⭐ Stats Bar (Simplified) -->
        <div class="stats-bar mt-4">
            <p>👀 Visitors: <strong>@ViewBag.TotalVisitors</strong></p>
            <p>❤️ Likes: <strong>@ViewBag.TotalLikes</strong></p>
            <p>📁 Repositories: <strong>8</strong></p>
        </div>
    </div>

    <!-- Right Section with Splash Behind Image -->
    <div class="right-section">
        <div class="image-wrapper">
            <img src="~/paint-splash.png" alt="Paint Splash" class="paint-splash" />
            <img src="~/images/Photo4.png" alt="Profile Image" class="profile-image img-fluid" />
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const roles = ["Software Developer", "Coder", "Creative Artist"];
        let currentIndex = 0;
        let charIndex = 0;
        let isDeleting = false;

        function type() {
            const currentWord = roles[currentIndex];
            const display = document.getElementById("typed-text");

            if (isDeleting) {
                charIndex--;
                display.textContent = currentWord.substring(0, charIndex);
                if (charIndex === 0) {
                    isDeleting = false;
                    currentIndex = (currentIndex + 1) % roles.length;
                    setTimeout(type, 500);
                    return;
                }
            } else {
                charIndex++;
                display.textContent = currentWord.substring(0, charIndex);
                if (charIndex === currentWord.length) {
                    isDeleting = true;
                    setTimeout(type, 1500);
                    return;
                }
            }
            setTimeout(type, isDeleting ? 60 : 120);
        }

        document.addEventListener("DOMContentLoaded", () => {
            type();
        });
    </script>
}

<style>
    .home-container {
        height: 100vh;
        padding: 0 5%;
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        justify-content: center;
        animation: fadeIn 1s ease-in-out;
    }

    .left-section {
        flex: 1 1 400px;
        padding: 1rem 2rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
        min-width: 300px;
    }

    .right-section {
        flex: 1 1 300px;
        display: flex;
        justify-content: center;
        align-items: center;
        min-width: 280px;
        padding: 1rem;
    }

    .intro-title {
        font-size: 2.8rem;
        font-weight: bold;
        animation: slideInLeft 1s ease;
    }

    .highlight {
        background: linear-gradient(90deg, #f9a825, #ffd54f, #f9a825);
        background-size: 200% 100%;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        animation: shimmer 3s linear infinite;
    }

    .typing-container {
        font-size: 1.4rem;
        font-weight: bold;
        min-height: 2.2rem;
        display: flex;
        align-items: center;
    }

    .cursor {
        font-weight: bold;
        font-size: 1.4rem;
        color: #f9a825;
        animation: blink 0.7s infinite;
        margin-left: 4px;
    }

    @@keyframes blink {
        0%, 100% {
            opacity: 1;
        }

        50% {
            opacity: 0;
        }
    }

    .motivational-quote {
        font-size: 1rem; /* 👈 SMALLER SIZE */
        color: var(--quote-color);
        margin-top: 30px;
        max-width: 500px;
        font-style: italic;
    }

    .btn-warning {
        font-weight: 600;
        padding: 0.6rem 1.5rem;
        font-size: 1rem;
        border-radius: 30px;
        transition: 0.3s ease-in-out;
        background-color: #f9a825;
        border: none;
        color: #000;
        animation: fadeInUp 1.2s ease;
    }

        .btn-warning:hover {
            background-color: #ffd54f;
            color: #000;
        }

    .image-wrapper {
        position: relative;
        width: 100%;
        max-width: 480px;
        height: auto;
        display: flex;
        align-items: center;
        justify-content: center;
        animation: zoomIn 0.8s ease;
    }

    .paint-splash {
        position: absolute;
        width: 100%;
        height: 100%;
        object-fit: contain;
        z-index: 1;
        animation: floatUpDown 4s ease-in-out infinite;
    }

    .profile-image {
        position: relative;
        z-index: 2;
        width: 100%;
        max-width: 380px;
        height: auto;
        transition: transform 0.3s ease;
    }

    @@keyframes floatUpDown {
        0%, 100% {
            transform: translateY(0);
        }

        50% {
            transform: translateY(-15px);
        }
    }

    @@keyframes shimmer {
        0% {
            background-position: 200% 0;
        }

        100% {
            background-position: -200% 0;
        }
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
    }

    @@keyframes slideInLeft {
        from {
            transform: translateX(-50px);
            opacity: 0;
        }

        to {
            transform: translateX(0);
            opacity: 1;
        }
    }

    @@keyframes fadeInUp {
        from {
            transform: translateY(30px);
            opacity: 0;
        }

        to {
            transform: translateY(0);
            opacity: 1;
        }
    }

    @@keyframes zoomIn {
        from {
            transform: scale(0.9);
            opacity: 0;
        }

        to {
            transform: scale(1);
            opacity: 1;
        }
    }

    /* ⭐ STATS BAR */
    .stats-bar {
        display: flex;
        gap: 25px;
        flex-wrap: wrap;
        font-size: 1.2rem; /* 👈 LARGE SIZE */
        font-weight: 600;
        background-color: transparent;
        padding: 12px 0;
    }

        .stats-bar p {
            margin: 0;
        }

        .stats-bar strong {
            font-weight: 700;
        }

    /* 👇 Theme-specific styles */
    body[data-theme='dark'] .motivational-quote {
        color: #eee;
    }

    body[data-theme='light'] .motivational-quote {
        color: #333;
    }

    body[data-theme='dark'] .stats-bar strong {
        color: #fff;
    }

    body[data-theme='light'] .stats-bar strong {
        color: #000;
    }

    /* Responsive Design */
    @@media (max-width: 992px) {
        .intro-title {
            font-size: 2.2rem;
        }

        .typing-container {
            font-size: 1.2rem;
        }

        .motivational-quote {
            font-size: 1rem;
        }

        .image-wrapper {
            max-width: 360px;
        }

        .profile-image {
            max-width: 320px;
        }
    }

    @@media (max-width: 768px) {
        .home-container {
            flex-direction: column;
            text-align: center;
            height: auto;
            padding: 2rem 1rem;
        }

        .left-section, .right-section {
            width: 100%;
            padding: 1rem 0;
        }

        .image-wrapper {
            max-width: 320px;
        }

        .profile-image {
            max-width: 260px;
        }
    }

    @@media (max-width: 480px) {
        .intro-title {
            font-size: 1.8rem;
        }

        .typing-container {
            font-size: 1rem;
        }

        .motivational-quote {
            font-size: 0.9rem;
        }

        .btn-warning {
            font-size: 0.9rem;
        }

        .image-wrapper {
            max-width: 240px;
        }

        .profile-image {
            max-width: 200px;
        }

        .stats-bar {
            flex-direction: column;
            align-items: flex-start;
            gap: 10px;
        }
    }
</style>
