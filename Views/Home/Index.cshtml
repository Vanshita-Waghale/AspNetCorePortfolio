            font-weight: 700;
        }

    .motivational-quote {
        font-size: 1rem;
        margin-top: 30px;
        max-width: 500px;
        font-style: italic;
    }

    body[data-theme='dark'] .motivational-quote {
        color: #eee;
    }

    body[data-theme='light'] .motivational-quote {
        color: #333;
    }

    body[data-theme='dark'] .stats-bar strong {
        color: #fff;
    }

    body[data-theme='light'] .stats-bar strong {
        color: #000;
    }

    body[data-theme='dark'] #typed-text {
        color: #fff;
    }

