<!-- ✨ Enhanced Styles -->
<style>
    .project-card {
        min-height: 350px;
        transition: transform 0.3s ease;
    }

        .project-card:hover {
            transform: translateY(-6px);
        }

    .card-title.gradient-title {
        background: linear-gradient(90deg, black);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-weight: bold;
        font-size: 1.7.rem;
        text-align: center;
    }

    .img-container {
        position: relative;
        overflow: hidden;
    }

        .img-container img {
            width: 100%;
            height: 200px;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

        .img-container:hover img {
            transform: scale(1.06);
        }

    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        height: 100%;
        width: 100%;
        background-color: rgba(0, 0, 0, 0.7);
        opacity: 0;
        transition: opacity 0.3s ease;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 12px;
        text-align: center;
        color: #fff;
    }

    .img-container:hover .overlay {
        opacity: 1;
    }

    .overlay-text {
        font-size: 0.95rem;
        font-weight: 500;
    }

    .overlay-link {
        display: block;
        color: #ffd700;
        font-weight: 600;
        margin-top: 8px;
        text-decoration: underline;
    }

        .overlay-link:hover {
            color: #fff700;
            text-decoration: none;
        }
</style>
