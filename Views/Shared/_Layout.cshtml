<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Portfolio</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

    <!-- Site CSS -->
    <link rel="stylesheet" href="~/css/site.css" />

    <style>
        .navbar-brand {
            color: orange !important;
            font-weight: bold;
            text-decoration: none !important;
        }

            .navbar-brand:hover {
                color: orange !important;
                text-decoration: none !important;
            }

        .navbar-nav .nav-link {
            font-weight: bold;
            text-decoration: none !important;
            transition: color 0.3s ease;
            line-height: 1.5;
            padding-top: 0.5rem;
            padding-bottom: 0.5rem;
        }

            .navbar-nav .nav-link:hover {
                color: orange !important;
            }

            .navbar-nav .nav-link:focus,
            .navbar-nav .nav-link:active {
                outline: none;
                box-shadow: none;
            }

        #themeToggleBtn {
            font-weight: bold;
        }

        #navbar {
            height: 70px;
            overflow: hidden;
            position: fixed;
            top: 0;
            width: 100%;
            z-index: 1050;
        }

        body {
            padding-top: 100px;
        }

        :root[data-theme="dark"] {
            --sparkle-color: #fff;
        }

        :root[data-theme="light"] {
            --sparkle-color: orange;
        }

        .sparkle {
            position: absolute;
            width: 6px;
            height: 6px;
            background: radial-gradient(circle, var(--sparkle-color), transparent);
            border-radius: 50%;
            pointer-events: none;
            opacity: 0.9;
            z-index: 9999;
            animation: glitterAnim 0.6s ease-out forwards;
        }

        @@keyframes glitterAnim {
            0% {
                transform: scale(1);
                opacity: 0.9;
                filter: drop-shadow(0 0 3px var(--sparkle-color));
            }

            100% {
                transform: translate(-50%, -50%) scale(0.5);
                opacity: 0;
                filter: drop-shadow(0 0 8px var(--sparkle-color));
            }
        }
    </style>

    @RenderSection("Scripts", required: false)
</head>
<body>
    <header class="navbar navbar-expand-lg px-3 navbar-dark bg-dark fixed-top" id="navbar">
        <a class="navbar-brand" href="/">MyPortfolio</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarContent">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                <li class="nav-item"><a class="nav-link" href="/Home/About">About</a></li>
                <li class="nav-item"><a class="nav-link" href="/Home/Projects">Projects</a></li>
                <li class="nav-item"><a class="nav-link" href="/Home/Contact">Contact</a></li>
                <li class="nav-item">
                    <button id="themeToggleBtn" class="btn btn-light btn-sm ms-2" onclick="toggleTheme()">Switch to Light Mode</button>

                </li>
            </ul>
        </div>
    </header>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <main class="container">
        @RenderBody()
    </main>

    <footer class="text-center py-3 mt-5" id="site-footer">
        <p class="mb-0">&copy; 2025 MyPortfolio | Built with ASP.NET Core</p>
    </footer>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const savedTheme = localStorage.getItem("theme") || "dark";
            document.documentElement.setAttribute("data-theme", savedTheme);
            updateButton(savedTheme);
            updateNavbar(savedTheme);
        });

        function toggleTheme() {
            const currentTheme = document.documentElement.getAttribute("data-theme") || "dark";
            const newTheme = currentTheme === "light" ? "dark" : "light";
            document.documentElement.setAttribute("data-theme", newTheme);
            localStorage.setItem("theme", newTheme);
            updateButton(newTheme);
            updateNavbar(newTheme);
        }

                function updateButton(theme) {
            const btn = document.getElementById("themeToggleBtn");

            // Reset button class completely
            btn.className = "btn btn-sm ms-2";

            if (theme === "light") {
                btn.classList.add("btn-dark");
                btn.textContent = "Switch to Dark Mode";
            } else {
                btn.classList.add("btn-light");
                btn.textContent = "Switch to Light Mode";
            }
        }


        function updateNavbar(theme) {
            const navbar = document.getElementById("navbar");
            if (theme === "light") {
                navbar.classList.remove("navbar-dark", "bg-dark");
                navbar.classList.add("navbar-light", "bg-light");
            } else {
                navbar.classList.remove("navbar-light", "bg-light");
                navbar.classList.add("navbar-dark", "bg-dark");
            }
        }
    </script>

    <script>
        document.addEventListener("mousemove", function (e) {
            const sparkle = document.createElement("div");
            sparkle.className = "sparkle";
            document.body.appendChild(sparkle);

            sparkle.style.left = e.pageX + "px";
            sparkle.style.top = e.pageY + "px";

            sparkle.style.transform = `translate(-50%, -50%) scale(${Math.random() * 0.8 + 0.3}) rotate(${Math.random() * 360}deg)`;

            setTimeout(() => {
                sparkle.remove();
            }, 600);
        });
    </script>
</body>
</html>
